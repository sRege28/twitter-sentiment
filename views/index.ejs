       function getAppliedFilters()
       {
         var filters ={};
         $(":input[name='filters']").each(
           function(){
            let label = $(this).attr("id");
            if($(this).is(":checked"))
            {
              filters[label] = true;
            }
            else
            {
              filters[label] = false;
            }

         });
         return filters;
       }

